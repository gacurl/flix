<h1>Write a new review for <%= link_to @movie.title, @movie %></h1>

<%= form_with model: [@movie, @review] do |f| %>

    <%= render "shared/errors", object: @review %>

  <%= f.label :stars %>
    <% Review::STARS.each do |star| %>
      <span class="star">
        <%= f.radio_button :stars, star %>
        <%= label_tag star %>
      </span>
    <% end %>

  <%= f.label :comment %>
  <%= f.text_area :comment, placeholder: "What did you think of the movie?", rows: 7 %>

  <%= f.submit "Post Review" %>

<% end %>