<section class="user">
  <h1><%= @user.username %></h1>

  <h2><%= mail_to @user.email %></h2>

  <p>Member since <%= @user.created_at.strftime("%B %Y") %></p>

  <% if current_user?(@user) %>
    <div class="actions">
      <%= link_to "Edit Account", edit_user_path(@user),
                      class: "button edit" %>
      <%= link_to "Delete Account", user_path(@user), 
                      data: { turbo_method: :delete, turbo_confirm: "Are you certain?" }, 
                      class: "button delete" %>
    </div>
  <% end %>
</section>
